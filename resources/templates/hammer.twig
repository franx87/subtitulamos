{% extends "base.twig" %}
{% import 'macros/assets.twig' as assets %}

{% block title %}Martillo @ {{ subtitle.version.episode.fullname }}{% endblock %}
{% block css %}
    {{ assets.css('hammer') }}
{% endblock %}

{% block content %}
<div id="hammer">
    <div class="container">
        <nav class="breadcrumb has-succeeds-separator" aria-label="breadcrumbs">
            <ul>
                <li><a href="/">Subtitulamos.tv</a></li>
                <li><a href="/shows/{{ show.id }}">{{ show.name }}</a></li>
                <li><a href="/shows/{{ show.id }}/season/{{ episode.season }}">Temporada {{ episode.season }}</a></li>
                <li><a href="/episodes/{{ episode.id }}">Episodio {{ episode.number }} - {{ episode.name}}</a></li>
                <li class="is-active"><a href="#" aria-current="page">Martillo</a></li>
            </ul>
        </nav>

        <div class='candidates'>
            Candidatos:
            <ul>
                {% for user in users %}
                    <hammertarget id="{{ user[0].id }}" username="{{ user[0].username }}" count="{{ user[1] }}"></hammertarget>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
    <script type="text/javascript">
        let subID = {{ subtitle.id }};
    </script>
    {{ assets.js('hammer') }}
{% endblock %}
