{% import 'macros/assets.twig' as assets %}
{% extends "base.twig" %}

{% block css %}
  {{ assets.css('panel/panel_base') }}
{% endblock %}

{% block content %}
<div class="panel-wrapper">
  <div class="container">
    <section class="main-content columns is-fullheight">
      {% block menu %}
        <aside class="menu column is-2">
          <p class="menu-label">
            General
          </p>
          <ul class="menu-list">
            <li><a href="javascript:void(0);">Configuración</a></li>
            <li><a href="javascript:void(0);">Lista de usuarios</a></li>
          </ul>
          <p class="menu-label">
            Moderación
          </p>
          <ul class="menu-list">
            <li><a href="/panel/alerts">Alertas</a></li>
            <li><a href="javascript:void(0);">Log de eventos</a></li>
            <li><a href="javascript:void(0);">Usuarios baneados</a></li>
          </ul>
        </aside>
      {% endblock %}

      <div class="column is-10">
        <section>
          {% block breadcrumb %}
            <nav class="breadcrumb has-succeeds-separator" aria-label="breadcrumbs">
              <ul>
                <li><a href="/">Subtitulamos.tv</a></li>
                <li class="is-active"><a href="#" aria-current="page">Panel de moderación</a></li>
              </ul>
            </nav>
          {% endblock %}
        </section>
        <section class="section">
          {% block panel_content %}
          {% endblock %}
        </section>
      </div>
    </section>
  </div>
</div>
{% endblock %}
